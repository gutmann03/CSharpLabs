<Window x:Class="CSharpLabs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLabs"
        mc:Ignorable="d"
        Title="Визначувач віку :)" Height="260" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Оберіть дату народження:" Margin="10" />
            <DatePicker SelectedDate="{Binding BirthDate}" Margin="10"/>

            <TextBlock Text="{Binding Age}" Margin="10"/>

            <TextBlock Text="{Binding WesternZodiac}" Margin="10"/>

            <TextBlock Text="{Binding ChineseZodiac}" Margin="10"/>

            <TextBlock Text="{Binding BirthdayMessage}" Foreground="Green" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
